<?xml version="1.0" encoding="UTF-8"?>
<persistence
  xmlns="https://jakarta.ee/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
  version="3.0"
>
  <persistence-unit name="twitterSearchGeoPU" transaction-type="JTA">
    <description>Persistence unit for tracking calls to Twitter Search API</description>
    <jta-data-source>jdbc/TwitterSearchGeoPool</jta-data-source>
    <class>uk.ac.ucl.twitter.search.geo.persistence.LocationEntity</class>
    <class>uk.ac.ucl.twitter.search.geo.persistence.ScheduleAppLocationEntity</class>
  </persistence-unit>
</persistence>
